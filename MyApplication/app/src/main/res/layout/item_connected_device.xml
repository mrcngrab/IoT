<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"

    card_view:cardBackgroundColor="@color/item_background_alpha"
    android:layout_margin="@dimen/padding_half">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Device Name"
            android:background="@color/item_title_background_alpha"
            android:gravity="center"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/text_device_name">

            <ImageView
                android:id="@+id/image_device_preview"
                android:background="@android:drawable/btn_star_big_on"
                android:layout_width="48dp"
                android:layout_height="48dp"/>

            <TextView
                android:id="@+id/text_device_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_standard"
                android:paddingRight="@dimen/padding_standard"
                android:layout_gravity="center"
                android:hint="Status"
                android:textSize="16dp" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>